{
  "name": "shopify-development-app",
  "version": "0.4.1",
  "author": "Felix Tellmann",
  "description": "Shopify Boilerplate App based on MERN Stack to fully integrate into the Shopify App store. Going through OAuth, Billing API, Embedded App SDK providing an interface based on Polaris.",
  "main": "src/index.js",
  "proxy": "http://localhost:3001",
  "scripts": {
    "install": "ls",
    "heroku-postbuild": "yarn build",
    "build": "rimraf ./build &&concurrently  \"yarn build:server\" \"yarn build:client\"",
    "build:server": "babel . --ignore node_modules,build,src --out-dir build",
    "build:client": "react-scripts build",
    "clean": "concurrently \"rimraf node_modules\" \"rimraf build\"",
    "start": "concurrently \"PORT=3001 yarn start:server\" \"PORT=3000 yarn start:client\"",
    "start:ngrok": "ngrok.exe http 3001",
    "start:win": "concurrently \"yarn start:server\" \"yarn start:client\" ",
    "start:dev": "nodemon -r dotenv/config -r babel-register server.js",
    "start:server": "nodemon -r dotenv/config -r babel-register server.js",
    "start:server:prod": "node -r dotenv/config -r ./build/server.js",
    "start:server:local": "nodemon -r dotenv/config -r ./build/server.js",
    "start:client": "react-scripts start",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public"
  },
  "dependencies": {
    "@shopify/polaris": "^1.8.3",
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-0": "^6.24.1",
    "concurrently": "^3.5.1",
    "cookie": "^0.3.1",
    "cookie-session": "^2.0.0-beta.3",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "mongoose": "^4.13.6",
    "nonce": "^1.0.4",
    "passport": "^0.4.0",
    "passport-shopify": "^0.1.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-scripts": "1.0.17",
    "request": "^2.83.0",
    "request-promise": "^4.2.2",
    "rimraf": "^2.6.2"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.2.17",
    "@storybook/addon-links": "^3.2.17",
    "@storybook/react": "^3.2.17",
    "babel-register": "^6.26.0",
    "nodemon": "^1.12.5"
  },
  "keywords": [
    "Shopify",
    "Node",
    "Express",
    "React",
    "Polaris",
    "Passport",
    "App",
    "Liquix",
    "Boilerplate",
    "Development"
  ],
  "engines": {
    "node": "8.9.1"
  }
}
